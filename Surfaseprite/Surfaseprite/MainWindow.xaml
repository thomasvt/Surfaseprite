<Window x:Class="Surfaseprite.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Surfaseprite"
        xmlns:sceneViewer="clr-namespace:Surfaseprite.SceneViewer"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="1000">
    <DockPanel>
        <Button DockPanel.Dock="Top" Content="Create test doc" Click="ButtonBase_OnClick"></Button>
        <Grid x:Name="SceneViewportPanel" Background="Black" SnapsToDevicePixels="True">
            <sceneViewer:SceneViewport x:Name="SceneViewport" SnapsToDevicePixels="True"></sceneViewer:SceneViewport>
        </Grid>
    </DockPanel>
</Window>
